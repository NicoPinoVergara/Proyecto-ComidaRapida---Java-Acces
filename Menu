        this.setVisible(false);
        // Mostrar el panel
        panelPedido.setVisible(true);
    }                                             

    private void jButtonVerVentasActionPerformed(java.awt.event.ActionEvent evt) {                                                 
        try {
            control = new Controlador();
            control.crearConexion();

        } catch (SQLException ex) {
            Logger.getLogger(PanelDetalle.class.getName()).log(Level.SEVERE, null, ex);
        }
        String sql = "Select * from detalle_pedido";

        try {
            rs = control.mandarQUERY(sql);
            PanelVerVentas verVenta = new PanelVerVentas();
            verVenta.llenarTabla(rs);
            verVenta.setVisible(true);
                this.setVisible(false);
            while (rs.next()) {
                System.out.println("Cod_Pedido: " + rs.getInt("cod_pedido") + ", Nombre_Cliente: " + rs.getString("nom_cliente_detpedido") + ", Nombre_Pedido: " + rs.getString("nombre_menu_detpedido") + ", Cantidad: " + rs.getInt("cantidad_detpedido") + ", Precio/u: " + rs.getInt("precio_detpedido") + ", Total: " + rs.getInt("total_detpedido"));
                // Crear una instancia de PanelVerVentas y pasarle el ResultSet como parámetro
                //PanelVerVentas verVenta = new PanelVerVentas(rs);
                
            }
        } catch (SQLException ex) {
            Logger.getLogger(Menu.class.getName()).log(Level.SEVERE, null, ex);
        }

    }                                                

