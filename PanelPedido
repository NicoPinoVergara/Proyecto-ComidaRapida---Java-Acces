    private void jButtonImagenAyudaActionPerformed(java.awt.event.ActionEvent evt) {                                                   
        // Mostrar un JOptionPane con el mensaje de ayuda
        JOptionPane.showMessageDialog(this, "Aquí puedes agregar el nombre del cliente y se le otorgará un código especial para identificarlo a él y a su pedido", "Ayuda", JOptionPane.INFORMATION_MESSAGE);
    }                                                  

    private void jButtonAtrasActionPerformed(java.awt.event.ActionEvent evt) {                                             
        // Crear una instancia del menú
        Menu menu = new Menu();
        // Ocultar la ventana actual
        this.setVisible(false);
        // Mostrar el menú
        menu.setVisible(true);
    }                                            

    private void jButtonSiguienteActionPerformed(java.awt.event.ActionEvent evt) {                                                 
        // Obtener el nombre del cliente ingresado
        String nombreCliente = jTextFieldNombre.getText();
        // Crear una instancia del PanelDetalle y pasar el nombre del cliente como argumento
        PanelDetalle panelDetalle = new PanelDetalle(nombreCliente);
        // Ocultar la ventana actual
        this.setVisible(false);
        // Mostrar el panel de detalle
        panelDetalle.setVisible(true);
    }                                                

