    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // Cuando se clicke este boton necesito obtener el value de jTextField1
        // Y con ese value vamos a correr un QUERY DELETE
        int codigoCliente = Integer.parseInt(jTextField1.getText());

        try {
            control = new Controlador();
            control.crearConexion();
        } catch (SQLException ex) {
            Logger.getLogger(Login.class.getName()).log(Level.SEVERE, null, ex);
        }
        // 

        String sql = "DELETE  from detalle_pedido WHERE cod_pedido = '" + jTextField1.getText() + "'";

        try {
            control.mandarSQL(sql);
           ResultSet result = nombreQueryPedidos();
            llenarTabla(result);

        } catch (SQLException ex) {
            Logger.getLogger(Login.class.getName()).log(Level.SEVERE, null, ex);
        }


    }                                        

