    public void llenarTabla(ResultSet rs) {
        DefaultTableModel model = (DefaultTableModel) jTable1.getModel();
        try {
            model.setRowCount(0);
            //model.setColumnCount(0);

            while (rs.next()) {
                Object[] fila = {
                    rs.getInt("cod_pedido"),
                    rs.getString("nom_cliente_detpedido"),
                    rs.getString("nombre_menu_detpedido"),
                    rs.getInt("cantidad_detpedido"),
                    rs.getInt("precio_detpedido"),
                    rs.getInt("total_detpedido")
                };
                model.addRow(fila);
            }

        } catch (SQLException ex) {
            Logger.getLogger(PanelVerVentas.class.getName()).log(Level.SEVERE, null, ex);
        }

    }

    public ResultSet nombreQueryPedidos() {
        ResultSet resultado;

        try {
            control = new Controlador();
            control.crearConexion();

        } catch (SQLException ex) {
            Logger.getLogger(PanelDetalle.class.getName()).log(Level.SEVERE, null, ex);
        }
        String sql = "Select * from detalle_pedido";

        try {
            resultado = control.mandarQUERY(sql);
            return resultado;
            
        } catch (SQLException ex) {
            Logger.getLogger(Menu.class.getName()).log(Level.SEVERE, null, ex);
        }
        return null;
    }

