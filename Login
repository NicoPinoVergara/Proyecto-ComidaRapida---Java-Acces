    private void jButtonIngresarActionPerformed(java.awt.event.ActionEvent evt) {                                                
        String Passw = new String(jPasswordField1.getPassword());
        try {
            control = new Controlador();
            control.crearConexion();
        } catch (SQLException ex) {
            Logger.getLogger(Login.class.getName()).log(Level.SEVERE, null, ex);
        }

        String sql = "Select * from Usuario WHERE us_nom='"
                + jTextFieldUsuario.getText() + "' and us_psw='" + Passw + "'";
        try {
            rs = control.mandarQUERY(sql);
            while (rs.next()) {
                Menu vent = new Menu();
                vent.setVisible(true);
                this.setVisible(false);
            }
        } catch (SQLException ex) {
            Logger.getLogger(Login.class.getName()).log(Level.SEVERE, null, ex);
        }


    }                                               

