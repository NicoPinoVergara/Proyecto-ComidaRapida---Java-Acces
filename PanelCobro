    public void actualizarEtiquetas(Object[] valoresFilaSeleccionada) {
    if (valoresFilaSeleccionada != null) {
        jLabelIdCliente.setText(valoresFilaSeleccionada[0].toString()); // Cod_Pedido
        jLabelNombreCliente.setText(valoresFilaSeleccionada[1].toString()); // Nombre_Cliente
        jLabelNombrePedido.setText(valoresFilaSeleccionada[2].toString()); // Nombre_Pedido
        jLabelCantidad.setText(valoresFilaSeleccionada[3].toString()); // Cantidad
        jLabelPrecioU.setText(valoresFilaSeleccionada[4].toString()); // Precio/u
        jLabelTotal.setText(valoresFilaSeleccionada[5].toString()); // Total
    } else {
        // Si no se seleccion√≥ ninguna fila, establecer los textos en blanco o valores predeterminados
        jLabelIdCliente.setText("");
        jLabelNombreCliente.setText("");
        jLabelNombrePedido.setText("");
        jLabelCantidad.setText("");
        jLabelPrecioU.setText("");
        jLabelTotal.setText("");
    }
}

