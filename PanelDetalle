    private void jButtonAgregarActionPerformed(java.awt.event.ActionEvent evt) {                                               
        String nombreCliente = jLabelNomCliente.getText();
        String productoSeleccionado = jComboBox2.getSelectedItem().toString();

        int cantidad = Integer.parseInt(jTextFieldCantidad.getText());
        int precio_detpedido = 1000;
        int total_detpedido = 5000;

        System.out.println(nombreCliente);
        System.out.println(productoSeleccionado);
        System.out.println(cantidad);

        try {
            control = new Controlador();
            control.crearConexion();

        } catch (SQLException ex) {
            Logger.getLogger(PanelDetalle.class.getName()).log(Level.SEVERE, null, ex);
        }

        String insertDetalle = "INSERT INTO detalle_pedido (nom_cliente_detpedido, nombre_menu_detpedido, cantidad_detpedido, precio_detpedido, total_detpedido) VALUES ('" + nombreCliente + "', '" + productoSeleccionado + "', '" + cantidad + "', '" + precio_detpedido + "', '" + total_detpedido + "')";

        try {
            res = control.mandarSQL(insertDetalle);
        } catch (SQLException ex) {
            Logger.getLogger(PanelDetalle.class.getName()).log(Level.SEVERE, null, ex);
        }
        if (res == -1) {
            System.out.println("error");
        } else {
            System.out.println("datos guardados");
            int codPed = getCodPedido(nombreCliente);
            DefaultTableModel model = (DefaultTableModel) jTableDetalle.getModel();
            model.addRow(new Object[]{codPed, nombreCliente, productoSeleccionado, cantidad, precio_detpedido, total_detpedido});

            //System.out.println("codPed :--->" + codPed);
        }

    }                                              

    private void jButtonCobrarActionPerformed(java.awt.event.ActionEvent evt) {                                              
        Object[] valoresFilaSeleccionada = obtenerValoresFilaSeleccionada();
    if (valoresFilaSeleccionada != null) {
        PanelCobro panelCobro = new PanelCobro();
        panelCobro.actualizarEtiquetas(valoresFilaSeleccionada);
        panelCobro.setVisible(true);
    }
    }                                             

    private void jComboBox2ActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
    }                                          
    private int getCodPedido(String nombreCliente) {

        try {
            control = new Controlador();
            control.crearConexion();

        } catch (SQLException ex) {
            Logger.getLogger(PanelDetalle.class.getName()).log(Level.SEVERE, null, ex);
        }
        String selectCodPedido = "SELECT cod_pedido FROM detalle_pedido WHERE nom_cliente_detpedido ='" + nombreCliente + "'";
        try {
            ResultSet rs = control.mandarQUERY(selectCodPedido);
            int codPedido = 0;
            while (rs.next()) {
                codPedido = rs.getInt("cod_pedido");

            }
            return codPedido;
        } catch (SQLException ex) {
            Logger.getLogger(PanelDetalle.class.getName()).log(Level.SEVERE, null, ex);
        }
        return 0;
    }

    public Object[] obtenerValoresFilaSeleccionada() {
        int filaSeleccionada = jTableDetalle.getSelectedRow();
        if (filaSeleccionada != -1) {
            DefaultTableModel model = (DefaultTableModel) jTableDetalle.getModel();
            return new Object[]{
                model.getValueAt(filaSeleccionada, 0), // Cod_Pedido
                model.getValueAt(filaSeleccionada, 1), // Nombre_Cliente
                model.getValueAt(filaSeleccionada, 2), // Nombre_Pedido
                model.getValueAt(filaSeleccionada, 3), // Cantidad
                model.getValueAt(filaSeleccionada, 4), // Precio/u
                model.getValueAt(filaSeleccionada, 5) // Total
            };
        }
        return null;
    }

